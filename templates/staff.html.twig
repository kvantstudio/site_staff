<div class="container-fluid hidden-sm">
{% set count_items = 0 %}
{% set count_col = 1 %}
{% for nid, data in nodes_employees %}
    {% if count_col == 1 %}
        <div class="row">
    {% endif %}
            {% set count_items = count_items + 1 %}
            <div class="col-xs-12 col-sm-6 col-md-3">
                <div class="staff__thumbnail">
                    {{ data.field_image_staff }}
                    <div class="staff__caption">
                        <h3>{{ data.title }}</h3>
                        <p>{{ data.field_summary }}</p>
                    </div>
                </div>
            </div>
    {% set count_col = count_col + 1 %}
    {% if count_col == 5 or count_items == count_nodes %}
        </div>
    {% endif %}
    {% if count_col == 5 %}
        {% set count_col = 1 %}
    {% endif %}
{% endfor %}
</div>

<div class="container-fluid visible-sm">
{% set count_items = 0 %}
{% set count_col = 1 %}
{% for nid, data in nodes_employees %}
    {% if count_col == 1 %}
        <div class="row">
    {% endif %}
            {% set count_items = count_items + 1 %}
            <div class="col-sm-6 ">
                <div class="staff__thumbnail">
                    {{ data.field_image_staff }}
                    <div class="staff__caption">
                        <h3>{{ data.title }}</h3>
                        <p>{{ data.field_summary }}</p>
                    </div>
                </div>
            </div>
    {% set count_col = count_col + 1 %}
    {% if count_col == 3 or count_items == count_nodes %}
        </div>
    {% endif %}
    {% if count_col == 3 %}
        {% set count_col = 1 %}
    {% endif %}
{% endfor %}
</div>